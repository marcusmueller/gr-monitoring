<block>
  <name>CtrlPort Textual Monitor</name>
  <key>monitoring_ctrlport_monitor_textual</key>
  <import>from gnuradio.ctrlport.monitor import *</import>
  <make>not $en or monitor(tool="textual_monitor")</make>
  <param>
    <name>Enabled</name>
    <key>en</key>
    <value></value>
    <type>enum</type>
        <option>
            <name>True</name>
            <key>True</key>
        </option>
        <option>
            <name>False</name>
            <key>False</key>
      </option>
  </param>
  <param>
    <name>Update Interval (s)</name>
    <key>interval</key>
    <value>1.0</value>
    <type>float</type>
  </param>

  <doc>
    Place this in a graph to launch a QtPy GR CtrlPort Monitor app.
  </doc>

</block>
